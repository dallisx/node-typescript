{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "pretty": true,
    "strictNullChecks": true,
    "outDir": "build" /* Redirect output structure to the directory. */,
    "rootDir": "./"
  },
  "include": ["lib/**/*.ts", "index.ts","./test"],
  "exclude": ["node_modules"]
}
